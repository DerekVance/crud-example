extends ../layout

block content
  main  
    div#header
      h1 
        a(href='/') The Zine
    div#section  
      form(action='/article/' + articles._id + '/edit' method='post')
        p
          label(for='title') Title
            input#title(type='text' name='title' value=(articles.title))
        p
          label(for='url') Url
            input#url(type='text' name='url' value=(articles.url))
        p
          input#textcolor(type="checkbox" name='textcolor' value=(articles.textcolor))
          label(for='textcolor') Background Image has Dark Colors  
        p
          label(for='excerpt') Excerpt
            textarea#excerpt(type='text' name='excerpt' )= articles.excerpt
        p
          label(for='body') Body
            textarea#body(name='body' value=(articles.body))= articles.body
        input(type='submit' value='edit')
